<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider == :facebook %>
      <%= link_to omniauth_authorize_path(resource_name, provider), :class => "btn btn-primary btn-large" do %>
        <i class="icon-facebook"></i> Sign in with <%= provider.to_s.titleize %>
      <% end %><br />
    <% else %>
      <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-primary btn-large" %><br />
    <% end %>
  <% end -%>
<% end -%>
