<div class="comment round ">
  <div class="profile-picture">
    <%= link_to user_profile_path(comment.user) do %>
      <%= image_tag comment.user.image_url(width: 30, height:30), :class => "img-circle image-shadow" %>
    <% end %>
  </div>
  <div class="content">
    <%= comment.content %>
  </div>
  <% if current_user.present? && comment.is_destroyable_by?(current_user) %>
    <div class="delete-button">
      <%= link_to "x", [comment.target, comment], :method => :delete, :confirm => "Do you really want to delete this comment?", :class => "btn btn-mini no-loading round`" %>
    </div>
  <% end %>
</div>
