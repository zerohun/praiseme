<%= form_for [:admin, @comment], :html => { :class => "form-horizontal" } do |f| %>

  <%= render "shared/error_messages", :target => @comment %>

  <div class="control-group">
    <label class="control-label">attribute.content</label>
    <div class="controls">
      <label><%= f.text_field :content %></label>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit (@comment.new_record?? 'Create' : 'Update' ), :class => "btn btn-primary" %>
    <%= link_to "cancel", admin_comments_path, :class = "btn" %>
  </div>
<% end %>
