<table class="table table-hover">
  <thead>
    <tr>
        <th>Compliment_id</th>
        <th>user_id</th>
        <th>targe_type</th>
        <th>content</th>
    </tr>
  </thead>
  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.target_id %></td>
      <td><%= User.find(comment.user_id).username %></td>
      <td><%= comment.target_type %></td>
      <td><%= comment.content %></td>
      <td>
        <div class="btn-group">
            <%= link_to "Delete", [:admin, comment], :confirm => "Do you really want to delete this item?", :method => :delete, :class => "btn btn-danger" %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

