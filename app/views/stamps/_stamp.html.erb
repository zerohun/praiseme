<div class="stamp-item">
  <div class="stamp-title">
    <%= stamp.title %>
  </div>
  <% size = "normal" if size.blank? %>
  <% if stamp.image.present? %>
    <%= image_tag stamp.image_url, :class => "img-#{size}" %>
  <% else %>
    <%= image_tag "trophy.png", :class => "img-#{size}" %>
    <br>
  <% end %>
</div>
